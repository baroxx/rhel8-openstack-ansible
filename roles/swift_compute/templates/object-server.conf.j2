[DEFAULT]

bind_ip = {{ net['controller']['ip'] }}
bind_port = 6200
user = swift
swift_dir = /etc/swift
devices = /srv/node
mount_check = True

[pipeline:main]

pipeline = healthcheck recon object-server

[filter:recon]

use = egg:swift#recon
recon_cache_path = /var/cache/swift
recon_lock_path = /var/lock