[DEFAULT]

transport_url = rabbit://openstack:{{ rabbit['pass'] }}@{{ net['controller']['hostname'] }}
heat_metadata_server_url = http://{{ net['controller']['hostname'] }}:8000
heat_waitcondition_server_url = http://{{ net['controller']['hostname'] }}:8000/v1/waitcondition
stack_domain_admin = heat_domain_admin
stack_domain_admin_password = {{ heat['admin'] }}
stack_user_domain_name = heat

[database]

connection = mysql+pymysql://heat:{{ heat['db'] }}@{{ net['controller']['hostname'] }}/heat

[keystone_authtoken]

www_authenticate_uri = http://{{ net['controller']['hostname'] }}:5000
auth_url = http://{{ net['controller']['hostname'] }}:5000
memcached_servers = {{ net['controller']['hostname'] }}:11211
auth_type = password
project_domain_name = default
user_domain_name = default
