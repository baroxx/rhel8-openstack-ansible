[linux_bridge]

physical_interface_mappings = provider:{{ net['management_interface'] }}

[vxlan]

enable_vxlan = true
local_ip = {{ net['controller']['ip'] }}
l2_population = true

[securitygroup]

enable_security_group = true
firewall_driver = neutron.agent.linux.iptables_firewall.IptablesFirewallDriver

